# Two files define the build-process of this package:
#
# configure.ac and Makefile.am

.PHONY: clean dist

all: .build.bstamp
.build.bstamp:
	cp LICENSE NEWS README.md AUTHORS ChangeLog .macros.m4 .version.m4 native/
	$(MAKE) -C native -f Makefile.build
	mkdir -p m4
	cp src/m4/* m4/
	aclocal -I m4
	autoconf
	automake --add-missing --force-missing --copy
	@touch .build.bstamp

dist: .build.bstamp
	./configure --disable-check_gmpmee
	$(MAKE) dist

api: .build.bstamp
	./configure --disable-check_gmpmee
	$(MAKE) api

clean:
	-$(MAKE) clean
	$(MAKE) -C native -f Makefile.build clean
	@find . -name "*~" -delete
	@rm -rf INSTALL aclocal.m4 autom4te.cache config.guess config.h config.h.in config.log config.status config.sub configure depcomp install-sh libtool ltmain.sh m4 Makefile.in Makefile missing stamp-h1 INSTALL confdefs.h conftest.tar configure.lineno vmgj-*.tar.gz *.bstamp .*.bstamp *.stamp
